extends layout

block content
  #loginpage
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Login
            .panel-body
              form(role='form')
                fieldset
                  .form-group
                    input.form-control(placeholder='E-mail', name='email', type='email', autofocus='autofocus')
                  .form-group
                    input.form-control(placeholder='Password', name='password', type='password', value='')
                  .checkbox
                    label
                      a.btn.btn-lg.btn-success.btn-block(href='index.html') Login