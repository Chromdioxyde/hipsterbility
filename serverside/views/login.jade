extends layout

block content
  #loginpage
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Login
            .panel-body
              form(role='form', method='POST', action='/auth')
                fieldset
                  .form-group
                    input.form-control(id="username", placeholder='Username', name='username', type='text', autofocus='autofocus')
                  .form-group
                    input.form-control(id="password", placeholder='Password', name='password', type='password', value='')
                  .form-group  
                    input.btn.btn-lg.btn-success.btn-block(type='submit', value='login')
     