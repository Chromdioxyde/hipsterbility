<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.hsosnabrueck.iui.informatik"
          android:versionCode="1"
          android:versionName="1.0">
    <!--Save files to SD-Card-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--Access Microphone-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--Access Cameras-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--Create on top Dialog and View-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!--Retrieve list of currently running tasks (for activity lifecycle)-->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <!--Root features-->
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <!--Network connection-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--Determine if mobile or local net-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--Tell the system which hardware components are used-->
    <uses-feature android:name="android.hardware.camera.front" />
    <uses-feature android:name="android.hardware.microphone"/>
    <application android:icon="@drawable/ic_launcher">
        <service android:enabled="true"
                 android:exported="false"
                 android:icon="@drawable/ic_launcher"
                 android:isolatedProcess="false"
                 android:label="@string/capture_service_label"
                 android:name=".vma.hipsterbility.services.CaptureService">
        </service>
        <service android:enabled="true"
                 android:exported="false"
                 android:icon="@drawable/ic_launcher"
                 android:isolatedProcess="false"
                 android:label="@string/app_name"
                 android:name=".vma.hipsterbility.services.HipsterbilityService">
        </service>
        <activity android:name=".vma.hipsterbility.activities.SessionActivity"/>
        <activity android:name=".vma.hipsterbility.activities.TasksActivity"/>
        <activity android:name=".vma.hipsterbility.activities.TodosActivity"/>
        <activity android:name=".vma.hipsterbility.activities.SettingsActivity" android:label="Preferences"/>
        <receiver android:name=".vma.hipsterbility.HipsterbilityBroadcastReceiver" >
            <intent-filter>
                <action android:name="de.hipsterbility.START_CAPTURE" />
                <action android:name="de.hipsterbility.STOP_CAPTURE" />
                <action android:name="de.hipsterbility.START_SESSION" />
                <action android:name="de.hipsterbility.FINISH_SESSION" />
            </intent-filter>
        </receiver>
    </application>
    <uses-sdk android:minSdkVersion="19" />
</manifest>
